<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.inlog.ecommerce">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:label="@string/app_name"
        android:roundIcon="@drawable/inloglogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="AllowBackup">
        <activity android:name=".myaccount.AccountActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"></activity>
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ordersummeryActivity" />
        <activity android:name=".activity.CheckoutActivity" />
        <activity android:name=".activity.orderdetailsActivity" />
        <activity android:name=".activity.MyOrdersActivity" />
        <activity android:name=".activity.WishlistActivity" />
        <activity
            android:name=".activity.MakePaymentActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RatingActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyC7xQImwNshslxmkpX641DWzC1AOguZad0" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".options.SearchResultsActivity" />
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.mapactivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ItemDetailsActivity"
            android:hardwareAccelerated="true"
            android:label="Product Details"
            android:parentActivityName=".activity.ItemDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CartListActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ProductListActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>