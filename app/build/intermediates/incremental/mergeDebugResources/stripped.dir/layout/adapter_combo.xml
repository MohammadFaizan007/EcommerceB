<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="RtlSymmetry">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/tools"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4.0dp"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:layout_marginTop="4.0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp"
        app:ignore="NamespaceTypo">

        <LinearLayout android:id="@+id/layout_item"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--                <ImageView-->
<!--                    android:id="@+id/image1"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="100.0dp"-->
<!--                    android:scaleType="centerCrop"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:gravity="center"/>-->
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="100.0dp"
                    android:layout_height="100.0dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="12dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="center"
                android:layout_gravity="center"/>

            <LinearLayout android:id="@+id/layout_item_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1.8">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/list_item_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$ 8.02"
                            android:textSize="12dp"
                            android:textColor="#4CAF50"
                            android:textAlignment="center"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/list_item_sale_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="160"
                            android:textSize="12dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/light_grey"
                            android:textAlignment="center"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/txtVqty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="160"
                            android:textSize="12dp"
                            android:paddingLeft="10dp"
                            android:textColor="@color/light_grey"
                            android:textAlignment="center"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
